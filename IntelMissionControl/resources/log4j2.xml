<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <ThresholdFilter level="DEBUG"/>
            <PatternLayout>
                <LevelPatternSelector defaultPattern="[%p] %msg%n">
                    <PatternMatch key="FATAL" pattern="%style{[%p]}{red,bright} %style{%msg%n%throwable}{red,bright}"/>
                    <PatternMatch key="ERROR" pattern="%style{[%p]}{red,bright} %style{%msg%n%throwable}{red,bright}"/>
                    <PatternMatch key="WARN" pattern="%style{[%p]}{yellow,bright} %style{%msg%n%throwable}{yellow,dim}"/>
                    <PatternMatch key="INFO" pattern="%style{[%p]}{blue,dim,bright} %style{%msg%n}{blue,dim}%style{%throwable}{blue,dim}"/>
                    <PatternMatch key="DEBUG" pattern="%style{[%p]}{white,bright} %style{%msg%n%throwable}{white}"/>
                    <PatternMatch key="GUICE" pattern="%style{[GUICE]}{cyan,dim,bright} %style{%msg%n}{cyan,dim}"/>
                </LevelPatternSelector>
            </PatternLayout>
        </Console>
        <ReseatableFile name="file">
            <ThresholdFilter level="INFO"/>
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </ReseatableFile>
    </Appenders>
    <Loggers>
        <Logger name="delight.nashornsandbox.NashornSandbox" level="OFF"/>
        <Root level="DEBUG">
            <AppenderRef ref="console"/>
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>