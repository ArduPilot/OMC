<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<TitledPane collapsible="false" focusTraversable="false" text="Mission" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.intel.dronekitsample.ui.MissionView">
   <content>
      <HBox alignment="BASELINE_LEFT" spacing="5.0">
         <ToggleButton fx:id="infoToggle" focusTraversable="false" mnemonicParsing="false" onAction="#toggleMissionWindow" style="-fx-background-radius: 0; -fx-font-size: small;" text="waypoints" />
          <Hyperlink fx:id="missionFile" minWidth="150.0" onAction="#pickMission" text="load" GridPane.columnIndex="1" GridPane.rowIndex="4">
              <GridPane.margin>
                  <Insets right="100.0" />
              </GridPane.margin>
          </Hyperlink>

          <Label fx:id="statusLabel" prefWidth="50.0" style="-fx-font-size: smaller;" text="Label" />
          <Button fx:id="startButton" mnemonicParsing="false" onAction="#startStopMission" prefWidth="70.0" text="Start" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
          <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseMission" prefWidth="70.0" text="Pause" />
      </HBox>
   </content>
</TitledPane>
