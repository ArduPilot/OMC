<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.intel.missioncontrol.ui.sidepane.analysis.AreaFilterView"
      maxWidth="Infinity" HBox.hgrow="ALWAYS" styleClass="normal-spacing"
      style="-fx-border-color: theme-separator-color; -fx-border-width: 0 0 1">
    <CheckBox fx:id="checkBox" style="-fx-pref-height: 2em"/>
    <Label fx:id="label" style="-fx-pref-height: 2em"/>
    <Pane HBox.hgrow="ALWAYS"/>
    <Button fx:id="deleteButton" styleClass="flat-icon-button, icon-trash, destructive"
            mnemonicParsing="false" onAction="#deleteClicked">
        <tooltip>
            <Tooltip
                    text="%com.intel.missioncontrol.ui.analysis.AnalysisOptionsSourceDataView.areaFilterPane.delete.tooltip"/>
        </tooltip>
    </Button>
</HBox>
