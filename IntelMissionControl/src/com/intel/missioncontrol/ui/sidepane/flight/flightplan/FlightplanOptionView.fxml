<?xml version="1.0" encoding="UTF-8"?>

<?import com.intel.missioncontrol.ui.controls.AutoCommitSpinner?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootNode" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.intel.missioncontrol.ui.sidepane.flight.flightplan.FlightplanOptionView"
            prefHeight="90.0" prefWidth="450.0">
    <stylesheets>
        <URL value="@/com/intel/missioncontrol/ui/sidepane/flight/flightplan/FlightplanOptionView.css"/>
    </stylesheets>
    <VBox spacing="10" styleClass="normal-padding">
        <VBox>
            <HBox>
                <Label text="%com.intel.missioncontrol.ui.sidepane.flight.flightplan.FlightplanOptionView.activeflightplan"/>
                <ImageView fx:id="alertIcon">
                    <Image url="@/com/intel/missioncontrol/icons/icon_warning(fill=theme-warning-color).svg"/>
                </ImageView>
            </HBox>

            <HBox>
                <ComboBox fx:id="flightplanComboBox" prefWidth="275"
                          value="%com.intel.missioncontrol.ui.sidepane.flight.flightplan.FlightplanOptionView.pleaseSelect"/>
                <Button fx:id="editFlightplan" HBox.hgrow="NEVER" styleClass="flat-button" maxHeight="Infinity">
                    <graphic>
                        <ImageView>
                            <Image url="@/com/intel/missioncontrol/icons/icon_edit.svg"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <HBox>
                <Label text="%com.intel.missioncontrol.ui.sidepane.flight.flightplan.FlightplanOptionView.estimatedtimetocomplete"/>
                <Label fx:id="estimatetime" text="00:00"/>
            </HBox>

        </VBox>

        <VBox>
            <Label text="%com.intel.missioncontrol.ui.sidepane.flight.flightplan.FlightplanOptionView.nextwaypoint"/>
            <HBox styleClass="normal-spacing">
                <AutoCommitSpinner fx:id="waypointIndexSpinner" editable="false" prefWidth="130"/>
                <StackPane fx:id="progressbarPane" prefWidth="120">
                </StackPane>
                <Button fx:id="refreshButton" HBox.hgrow="NEVER" styleClass="flat-button" maxHeight="Infinity"
                        onAction="#onRefreshButtonClicked" visible="false">
                    <graphic>
                        <ImageView>
                            <Image url="@/com/intel/missioncontrol/icons/icon_refresh.svg"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>

        <Button fx:id="sendButton"
                text="%com.intel.missioncontrol.ui.sidepane.flight.flightplan.FlightplanOptionView.send"
                styleClass="secondary-button"/>
    </VBox>
</AnchorPane>
