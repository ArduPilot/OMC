<?xml version="1.0" encoding="UTF-8"?>

<?import com.intel.missioncontrol.ui.controls.ItemsView?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" fx:id="checklistrootlayout"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.intel.missioncontrol.ui.dialogs.preflightchecks.ManualChecklistDialogView"
      prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@/com/intel/missioncontrol/styles/themes/colors-light.css"/>
        <URL value="@/com/intel/missioncontrol/styles/controls.css"/>
        <URL value="@/com/intel/missioncontrol/styles/dialog.css"/>
    </stylesheets>
    <BorderPane>
        <center>
            <ScrollPane fx:id="scroller" fitToHeight="true" fitToWidth="true">
                <ItemsView fx:id="checklists">
                    <itemsPane>
                        <VBox/>
                    </itemsPane>
                </ItemsView>
            </ScrollPane>
        </center>
        <bottom>
            <AnchorPane>
                <Button AnchorPane.bottomAnchor="5" AnchorPane.rightAnchor="5" AnchorPane.topAnchor="5"
                        style="-fx-padding: 0.2em" onAction="#onCloseClicked"
                        text="%com.intel.missioncontrol.ui.flight.checklist.doneButton" styleClass="secondary-button"/>
            </AnchorPane>
        </bottom>
    </BorderPane>

</VBox>
