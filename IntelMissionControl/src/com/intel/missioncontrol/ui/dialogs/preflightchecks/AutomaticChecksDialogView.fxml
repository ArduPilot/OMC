<?xml version="1.0" encoding="UTF-8"?>

<?import com.intel.missioncontrol.ui.controls.ItemsView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="layoutRoot" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.intel.missioncontrol.ui.dialogs.preflightchecks.AutomaticChecksDialogView"
      prefHeight="400.0" prefWidth="600.0">
    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" hbarPolicy="NEVER"
                style="-fx-background-color: transparent">
        <ItemsView fx:id="itemsView" style="-fx-padding: 0 0 0 1em">
            <VBox styleClass="normal-spacing"/>
        </ItemsView>
    </ScrollPane>

    <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER" styleClass="wide-padding">
        <Button onAction="#onDoneButtonClicked" styleClass="secondary-button" HBox.hgrow="NEVER"
                text="%com.intel.missioncontrol.ui.dialogs.preflightchecks.AutomaticChecksDialogView.done"/>
    </HBox>
</VBox>
