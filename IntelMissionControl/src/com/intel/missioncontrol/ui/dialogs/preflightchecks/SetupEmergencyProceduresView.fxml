<?xml version="1.0" encoding="UTF-8"?>

<?import com.intel.missioncontrol.ui.controls.AutoCommitSpinner?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="layoutRoot" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.intel.missioncontrol.ui.dialogs.preflightchecks.SetupEmergencyProceduresView"
      prefHeight="150.0" prefWidth="250.0">
    <VBox styleClass="normal-padding,label-value">
        <Label text="%com.intel.missioncontrol.ui.dialogs.preflightchecks.SetupEmergencyProceduresView.whenLinkToGroundControlIsLost"/>
        <ComboBox fx:id="procedureComboBox" prefWidth="Infinity"/>
        <Label fx:id="safetyAltitudeLabel"
               text="%com.intel.missioncontrol.ui.dialogs.preflightchecks.SetupEmergencyProceduresView.safetyAltitude"/>
        <AutoCommitSpinner fx:id="safetyAltitudeSpinner" editable="true"/>
    </VBox>

    <VBox styleClass="normal-padding,label-value">
        <Label text="%com.intel.missioncontrol.ui.dialogs.preflightchecks.SetupEmergencyProceduresView.backupController"/>
        <ComboBox fx:id="controllerComboBox" prefWidth="Infinity"/>
    </VBox>

    <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER" styleClass="wide-padding,wide-spacing">
        <Button text="%com.intel.missioncontrol.ui.dialogs.preflightchecks.SetupEmergencyProceduresView.apply"
                styleClass="primary-button" HBox.hgrow="NEVER"
                onAction="#onApplyButtonClicked"/>
        <Button text="%com.intel.missioncontrol.ui.dialogs.preflightchecks.SetupEmergencyProceduresView.cancel"
                styleClass="secondary-button" HBox.hgrow="NEVER"
                onAction="#onCancelButtonClicked"/>
    </HBox>

</VBox>
