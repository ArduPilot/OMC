<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<HBox fx:id="layoutRoot" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.intel.missioncontrol.ui.notifications.ToastView"
      style="-fx-padding: 1em 0 1em 1em" alignment="CENTER">
    <stylesheets>
        <URL value="@/com/intel/missioncontrol/ui/notifications/ToastView.css"/>
        <URL value="@/com/intel/missioncontrol/styles/icons.css"/>
    </stylesheets>

    <StackPane fx:id="imageContainer" style="-fx-padding: 0 1em 0 0">
        <ImageView fx:id="imageView" fitWidth="32" fitHeight="32"/>
    </StackPane>

    <Label fx:id="textLabel" alignment="BASELINE_CENTER" style="-fx-padding: 0 1em 0 0"/>

    <CheckBox fx:id="actionCheckBox" alignment="CENTER" style="-fx-padding: 0 1em 0 0"/>

    <Hyperlink fx:id="actionLink" alignment="BASELINE_CENTER" style="-fx-padding: 0 1em 0 0"/>

    <Button fx:id="closeButton" styleClass="icon-close-inverse"/>

</HBox>
