<?xml version="1.0" encoding="UTF-8"?>
<?import com.intel.missioncontrol.ui.sidepane.flight.widget.ProgressButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="layoutRoot"
      fx:controller="com.intel.missioncontrol.ui.navbar.connection.view.RtkConfigurationView">
    <Separator/>
    <TitledPane fx:id="configuration"
                text="%com.intel.missioncontrol.ui.connection.view.RtkConfigurationView.configuration"
                VBox.vgrow="ALWAYS">
        <VBox>
            <HBox style="-fx-spacing: 1em;">
                <ComboBox fx:id="rtkConfigs"/>
                <Button fx:id="rtkConfigBrowseButton" styleClass="secondary-button"
                        text="%com.intel.missioncontrol.ui.connection.view.RtkConfigurationView.browse"/>
                <ProgressButton fx:id="rtkConfigSendButton" style="-fx-pref-width: 7.75em; -fx-pref-height: 2em;"
                                text="%com.intel.missioncontrol.ui.connection.view.RtkConfigurationView.send"
                                textInProgress="%com.intel.missioncontrol.ui.connection.view.RtkConfigurationView.sending"/>

                <Hyperlink fx:id="rtkConfigCancel"
                           text="%com.intel.missioncontrol.ui.connection.view.RtkConfigurationView.cancel"/>
            </HBox>
            <VBox>
                <Button fx:id="rtkConfigAdvancedButton" styleClass="secondary-button"
                        text="%com.intel.missioncontrol.ui.connection.view.RtkConfigurationView.advanced"/>
            </VBox>
        </VBox>
    </TitledPane>
</VBox>
