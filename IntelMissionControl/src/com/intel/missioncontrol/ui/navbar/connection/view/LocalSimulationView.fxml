<?xml version="1.0" encoding="UTF-8"?>

<?import com.intel.missioncontrol.ui.controls.AutoCommitSpinner?>
<?import com.intel.missioncontrol.ui.navbar.connection.view.widget.AirplaneSpeedComponent?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.Float?>
<?import java.util.ArrayList?>
<?import javafx.scene.control.ToggleButton?>
<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.intel.missioncontrol.ui.navbar.connection.view.LocalSimulationView"
      fx:id="rootNode" style="-fx-pref-width: 36em">

    <VBox>
        <Label styleClass="primary,header"
               text="%com.intel.missioncontrol.ui.connection.ConnectionView.localSimulation"/>

        <ScrollPane hbarPolicy="NEVER" fitToWidth="true">
            <VBox styleClass="wide-padding">
                <VBox styleClass="form-row">
                    <Label
                           text="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.simulateDevice"/>
                    <ComboBox focusTraversable="true" fx:id="simulatorsCombo"
                              promptText="%com.intel.missioncontrol.ui.connection.view.DetectedUavView.selectedUav"/>

                </VBox>
                <Separator/>
                <VBox fx:id="propertiesPanel">
                    <VBox fx:id="fullyConnectedVBox">
                        <Label fx:id="labelFullyConnected"
                               style="-fx-text-fill: theme-success-confirmation-label-color;"
                               text="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.fullyConnected"/>
                    </VBox>
                    <VBox>
                        <Label text="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.startPosition"
                               styleClass="label-bold"/>
                    </VBox>
                    <VBox fx:id="startPositionPanel" style="-fx-padding: 1em 0 0 0;-fx-spacing: 1em;">
                        <GridPane style="-fx-hgap: 1em; -fx-vgap: 0.5em; -fx-alignment: center-left;">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="25.25"/>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="25.25"/>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="49.5"/>
                            </columnConstraints>
                            <Label text="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.latitude"
                                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                            <Label text="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.longitude"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <AutoCommitSpinner fx:id="latitudeSpinner" editable="true" maxWidth="Infinity"
                                               styleClass="spinner-without-arrows" GridPane.columnIndex="0"
                                               GridPane.rowIndex="1"/>

                            <AutoCommitSpinner fx:id="longitudeSpinner" editable="true" maxWidth="Infinity"
                                               styleClass="spinner-without-arrows" GridPane.columnIndex="1"
                                               GridPane.rowIndex="1"/>

                            <ToggleButton fx:id="setStartPositionButton" onAction="#startPositionButtonPressed"
                                          mnemonicParsing="false" styleClass="secondary-button" maxWidth="Infinity"
                                          text="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.setStartPosition"
                                          GridPane.columnIndex="2" GridPane.rowIndex="1">
                                <graphic>
                                    <ImageView fx:id="setStartPositionImage" pickOnBounds="true" preserveRatio="true">
                                        <Image url="@/com/intel/missioncontrol/icons/icon_button-set-start-position(fill=theme-secondary-button-text-color).svg"/>
                                    </ImageView>
                                </graphic>
                            </ToggleButton>

                        </GridPane>
                    </VBox>

                    <!--<AirplaneSpeedComponent initValue="1" fx:id="airplaneSpeedComponent"
                                            style="-fx-padding: 1em 0 0 0"
                                            title="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.simulationSpeed.title">
                        <maxValue>
                            <Float fx:constant="MAX_VALUE"/>
                        </maxValue>
                        <sliderValues>
                            <ArrayList>
                                <Float fx:value="0.25"/>
                                <Float fx:value="0.5"/>
                                <Float fx:value="1.0"/>
                                <Float fx:value="2.0"/>
                                <Float fx:value="4.0"/>
                                <Float fx:value="8.0"/>
                                <Float fx:value="16.0"/>
                            </ArrayList>
                        </sliderValues>
                    </AirplaneSpeedComponent>-->
                </VBox>
            </VBox>
        </ScrollPane>
    </VBox>


    <VBox styleClass="wide-padding">
        <Separator fx:id="actionSectionSeparator"/>
        <Button fx:id="actionButton"
                text="%com.intel.missioncontrol.ui.connection.view.LocalSimulationView.actionButton.start"
                onAction="#actionButtonPressed" styleClass="secondary-button"/>
    </VBox>

</VBox>