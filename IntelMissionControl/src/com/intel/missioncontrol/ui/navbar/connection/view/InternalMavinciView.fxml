<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="rootNode" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.intel.missioncontrol.ui.navbar.connection.view.InternalMavinciView">
    <VBox fx:id="internalWebView">
        <Separator/>
        <TitledPane text="%com.intel.missioncontrol.ui.connection.view.InternalMavinciView.browserSectiontitle"
                    fx:id="webViewPane" animated="false">
            <AnchorPane maxHeight="300" fx:id="webViewContainer">
                <Label alignment="CENTER" fx:id="connectionErrorPlaceholder"
                       text="%com.intel.missioncontrol.ui.connection.view.InternalMavinciView.connectionError"
                       AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"/>
                <Label alignment="CENTER" fx:id="loadingIndicator"
                       text="%com.intel.missioncontrol.ui.connection.view.InternalMavinciView.loading"
                       AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"/>
                <Hyperlink alignment="CENTER" fx:id="openPageLink" onAction="#openPage"
                           text="%com.intel.missioncontrol.ui.connection.view.InternalMavinciView.openBaseStationSetup"/>
            </AnchorPane>
        </TitledPane>
    </VBox>

</VBox>
