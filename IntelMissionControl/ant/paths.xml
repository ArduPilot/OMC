	<macrodef name="pyObfuscate">
	   	<attribute name="file"/>
		<sequential>

			<echo>python3 ${path.mnfy.dir}/mnfy.py @{file}</echo>
			<exec executable="python3" failonerror="true" output="@{file}.pyObfus">
				<arg value="${path.mnfy.dir}/mnfy.py"/>
				<arg value="@{file}"/>
			</exec>
			<move file="@{file}.pyObfus" tofile="@{file}"/>
	   	</sequential>
	</macrodef>
	
	
