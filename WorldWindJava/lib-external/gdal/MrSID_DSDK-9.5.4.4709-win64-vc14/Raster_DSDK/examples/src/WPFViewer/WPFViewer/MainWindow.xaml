<Window x:Class="LizardTech.SampleWpfViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pipeline Viewer"
        Width="400"
        Height="400">

   <DockPanel LastChildFill="True">

      <Button DockPanel.Dock="Top"
              Width="100"
              Margin="5"
              Click="OpenFileClick"
              Content="Open file..." />

      <Canvas Name="RenderingCanvas"
              Background="Black"
              ClipToBounds="True"
              Margin="10,0,0,10">
         <Image Name="imageControl"
                Stretch="None" />
      </Canvas>


   </DockPanel>
</Window>
